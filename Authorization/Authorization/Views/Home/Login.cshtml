@{
    string retunedUrl = ViewData["returnedUrl"] as string;
}

<form method="post" action="Login?ReturnUrl=@System.Net.WebUtility.UrlEncode(retunedUrl)">
    <input type="text" name="username" />
    <input type="password" name="password" />
    <input type="submit" name="submit" />
</form>